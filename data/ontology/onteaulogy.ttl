@prefix : <http://example.org/onteaulogy#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# Ontology Metadata
<http://example.org/onteaulogy> rdf:type owl:Ontology ;
    rdfs:label "ontEAUlogy"@en ;
    rdfs:comment "A comprehensive ontology for water reuse and management"@en ;
    owl:versionInfo "1.0.0" ;
    skos:definition "An ontology that provides a structured vocabulary for describing water reuse systems, processes, and related concepts in environmental engineering and water management."@en .

# Main Classes

:WaterSource rdf:type owl:Class ;
    rdfs:label "Water Source"@en ;
    rdfs:comment "A source of water that can be used in water reuse systems"@en ;
    skos:definition "Any natural or artificial source from which water can be obtained for reuse purposes."@en .

:TreatmentProcess rdf:type owl:Class ;
    rdfs:label "Treatment Process"@en ;
    rdfs:comment "A process used to treat water for reuse"@en ;
    skos:definition "A systematic procedure or method for treating wastewater or other water sources to make them suitable for reuse."@en .

:WaterQualityParameter rdf:type owl:Class ;
    rdfs:label "Water Quality Parameter"@en ;
    rdfs:comment "A measurable characteristic of water quality"@en ;
    skos:definition "A specific physical, chemical, or biological characteristic that can be measured to assess water quality."@en .

:ReuseApplication rdf:type owl:Class ;
    rdfs:label "Reuse Application"@en ;
    rdfs:comment "An application or use case for reused water"@en ;
    skos:definition "A specific purpose or application for which treated water is reused."@en .

# Subclasses

:SurfaceWater rdf:type owl:Class ;
    rdfs:subClassOf :WaterSource ;
    rdfs:label "Surface Water"@en ;
    rdfs:comment "Water from surface sources like rivers, lakes, and reservoirs"@en .

:Groundwater rdf:type owl:Class ;
    rdfs:subClassOf :WaterSource ;
    rdfs:label "Groundwater"@en ;
    rdfs:comment "Water from underground aquifers and wells"@en .

:Wastewater rdf:type owl:Class ;
    rdfs:subClassOf :WaterSource ;
    rdfs:label "Wastewater"@en ;
    rdfs:comment "Water that has been used and requires treatment"@en .

:Filtration rdf:type owl:Class ;
    rdfs:subClassOf :TreatmentProcess ;
    rdfs:label "Filtration"@en ;
    rdfs:comment "Physical process to remove particles from water"@en .

:Disinfection rdf:type owl:Class ;
    rdfs:subClassOf :TreatmentProcess ;
    rdfs:label "Disinfection"@en ;
    rdfs:comment "Process to eliminate harmful microorganisms"@en .

:pH rdf:type owl:Class ;
    rdfs:subClassOf :WaterQualityParameter ;
    rdfs:label "pH"@en ;
    rdfs:comment "Measure of acidity or alkalinity"@en .

:Turbidity rdf:type owl:Class ;
    rdfs:subClassOf :WaterQualityParameter ;
    rdfs:label "Turbidity"@en ;
    rdfs:comment "Measure of water clarity"@en .

:AgriculturalReuse rdf:type owl:Class ;
    rdfs:subClassOf :ReuseApplication ;
    rdfs:label "Agricultural Reuse"@en ;
    rdfs:comment "Use of treated water for agricultural irrigation"@en .

:IndustrialReuse rdf:type owl:Class ;
    rdfs:subClassOf :ReuseApplication ;
    rdfs:label "Industrial Reuse"@en ;
    rdfs:comment "Use of treated water in industrial processes"@en .

# Properties

:hasSource rdf:type owl:ObjectProperty ;
    rdfs:label "has source"@en ;
    rdfs:comment "Relates a system to its water source"@en ;
    rdfs:domain :WaterSource ;
    rdfs:range :WaterSource .

:usesTreatmentProcess rdf:type owl:ObjectProperty ;
    rdfs:label "uses treatment process"@en ;
    rdfs:comment "Relates a water source to the treatment processes it undergoes"@en ;
    rdfs:domain :WaterSource ;
    rdfs:range :TreatmentProcess .

:hasQualityParameter rdf:type owl:ObjectProperty ;
    rdfs:label "has quality parameter"@en ;
    rdfs:comment "Relates a water source to its quality parameters"@en ;
    rdfs:domain :WaterSource ;
    rdfs:range :WaterQualityParameter .

:hasApplication rdf:type owl:ObjectProperty ;
    rdfs:label "has application"@en ;
    rdfs:comment "Relates treated water to its reuse applications"@en ;
    rdfs:domain :TreatmentProcess ;
    rdfs:range :ReuseApplication .

:parameterValue rdf:type owl:DatatypeProperty ;
    rdfs:label "parameter value"@en ;
    rdfs:comment "The measured value of a water quality parameter"@en ;
    rdfs:domain :WaterQualityParameter ;
    rdfs:range xsd:float .

:parameterUnit rdf:type owl:DatatypeProperty ;
    rdfs:label "parameter unit"@en ;
    rdfs:comment "The unit of measurement for a water quality parameter"@en ;
    rdfs:domain :WaterQualityParameter ;
    rdfs:range xsd:string .

:processEfficiency rdf:type owl:DatatypeProperty ;
    rdfs:label "process efficiency"@en ;
    rdfs:comment "The efficiency rating of a treatment process"@en ;
    rdfs:domain :TreatmentProcess ;
    rdfs:range xsd:float .

# Property Characteristics

:hasSource rdf:type owl:FunctionalProperty .
:parameterValue rdf:type owl:FunctionalProperty .
:parameterUnit rdf:type owl:FunctionalProperty .

# Individuals

:RiverWater rdf:type :SurfaceWater , owl:NamedIndividual ;
    rdfs:label "River Water"@en ;
    rdfs:comment "Water sourced from rivers and streams"@en .

:LakeWater rdf:type :SurfaceWater , owl:NamedIndividual ;
    rdfs:label "Lake Water"@en ;
    rdfs:comment "Water sourced from lakes and reservoirs"@en .

:MunicipalWastewater rdf:type :Wastewater , owl:NamedIndividual ;
    rdfs:label "Municipal Wastewater"@en ;
    rdfs:comment "Wastewater from municipal sewage systems"@en .

:SandFiltration rdf:type :Filtration , owl:NamedIndividual ;
    rdfs:label "Sand Filtration"@en ;
    rdfs:comment "Filtration process using sand as the filter medium"@en ;
    :processEfficiency "0.85"^^xsd:float .

:UVDisinfection rdf:type :Disinfection , owl:NamedIndividual ;
    rdfs:label "UV Disinfection"@en ;
    rdfs:comment "Disinfection using ultraviolet light"@en ;
    :processEfficiency "0.99"^^xsd:float .

:CropIrrigation rdf:type :AgriculturalReuse , owl:NamedIndividual ;
    rdfs:label "Crop Irrigation"@en ;
    rdfs:comment "Use of treated water for irrigating agricultural crops"@en .

:IndustrialCooling rdf:type :IndustrialReuse , owl:NamedIndividual ;
    rdfs:label "Industrial Cooling"@en ;
    rdfs:comment "Use of treated water for industrial cooling processes"@en .

:pH_Parameter rdf:type :pH , owl:NamedIndividual ;
    rdfs:label "pH Measurement"@en ;
    :parameterValue "7.2"^^xsd:float ;
    :parameterUnit "pH units" .

:Turbidity_Parameter rdf:type :Turbidity , owl:NamedIndividual ;
    rdfs:label "Turbidity Measurement"@en ;
    :parameterValue "1.5"^^xsd:float ;
    :parameterUnit "NTU" .

# Relationships

:RiverWater :hasQualityParameter :pH_Parameter .
:RiverWater :hasQualityParameter :Turbidity_Parameter .
:RiverWater :usesTreatmentProcess :SandFiltration .
:RiverWater :usesTreatmentProcess :UVDisinfection .
:SandFiltration :hasApplication :CropIrrigation .
:UVDisinfection :hasApplication :IndustrialCooling .
